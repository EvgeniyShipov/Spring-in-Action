<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleLogger" class="ru.shipov.spring.ConsoleEventLogger"/>

    <bean id="fileLogger" class="ru.shipov.spring.FileEventLogger" init-method="init">
        <constructor-arg value="src/main/resources/temp.txt"/>
    </bean>

    <bean id="cacheFileLogger" class="ru.shipov.spring.CacheFileEventLogger" parent="fileLogger"
          destroy-method="destroy">
        <constructor-arg value="100"/>
    </bean>

    <bean id="combinedEventLogger" class="ru.shipov.spring.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleLogger"/>
                <ref bean="fileLogger"/>
                <ref bean="cacheFileLogger"/>
            </list>
        </constructor-arg>
    </bean>

</beans>